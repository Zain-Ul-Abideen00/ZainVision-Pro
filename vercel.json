{
    "version": 2,
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "15mb",
                "handler": "main.py",
                "excludeFiles": "**/*.?(png|jpg|jpeg|gif|webp)"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "backend/main.py"
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1",
        "PYTHONPATH": "/var/task",
        "DISABLE_OPENCV_PARALLEL_PROCESSING": "1"
    }
}
